                  android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:layout_margin="35.0dip">
        <TextView android:textSize="18.0dip" android:textStyle="bold" android:textColor="@color/darkBlue"
                  android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="@string/AreYourSure" android:maxLines="2"
                  android:lines="2"/>
