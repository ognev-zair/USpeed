                  android:layout_height="wrap_content" android:layout_marginTop="8.0dip"
                  android:text="@string/ClearCacheInformation" android:maxLines="2" android:lines="2"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="horizontal"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_margin="25.0dip">
